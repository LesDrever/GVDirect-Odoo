<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <template id="gv_report_delivery_document" inherit_id="stock.report_delivery_document">
            <xpath expr="//table[@name='stock_move_table']//th[@name='th_sm_product']" position="after">
                <th name="th_picking_description">
                    <strong>Picking Description</strong>
                </th>
            </xpath>

            <xpath expr="//table[@name='stock_move_table']//span[@t-field='move.product_id']/.." position="after">
                <td>
                    <span t-field="move.product_id.description_internal_transfer_ids"/>
                </td>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']//span[@t-field='move.description_picking']/.." position="replace"/>


            <xpath expr="//table[@name='stock_move_line_table']//th[@name='th_sml_product']" position="after">
                <th name="th_picking_description">
                    <strong>Picking Description</strong>
                </th>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']//span[@t-field='move_line.product_id']/.." position="after">
                <td>
                    <span t-field="move_line.product_id.description_internal_transfer_ids"/>
                </td>
            </xpath>
            <xpath expr="//table[@name='stock_move_line_table']//span[@t-field='move_line.move_id.description_picking']/.." position="replace"/>
        </template>

    </data>
</odoo>
